<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><strong>Actions: </strong> <%= link_to ' ', '#', class: "fa fa-eye", id: "view-friend" %></td>
            <% if current_user.not_friends_with?(friend.id) %>
              <td><%= link_to ' ', "#", class: "fa fa-plus-circle", id: "add-friend", method: :post %></td>
            <% else %>
              <td>
                <span class="badge badge-warning">
                  you are friends
                </span>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>